<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de la búsqueda: <%= search %></h2>
			</div>
			<% if (products.length) { %>
			 
				<% for (product of products) { 
					let finalPrice=product.discount ? (product.price - product.price * product.discount / 100).toFixed(0) : product.price; 
				%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/detail/<%= product.id %> ">
								<figure class="product-box_image">
									<img src="/images/products/<%= product.image %> " alt="<%= product.name %>">
								</figure>
								<article class="product-box_data">
									<h2>$<%= toThousand(finalPrice) %>
									</h2>
									<%- product.discount ? `<span>${product.discount}% OFF</span>` : '' %>
										<p>
											<%= product.name %>
										</p>
										<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
				<% } %>	
			<% } else { %>
				<div class="col-12">
					<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
				</div>
			<% } %>

			
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>